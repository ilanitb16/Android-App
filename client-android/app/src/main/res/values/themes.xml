<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Facebook" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Facebook" parent="Base.Theme.Facebook" />

    <style name="CustomBorderTextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/themeGray</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="boxCornerRadiusTopStart">15sp</item> <!-- Adjust the radius as needed -->
        <item name="boxCornerRadiusTopEnd">15sp</item>
        <item name="boxCornerRadiusBottomStart">15sp</item>
        <item name="boxCornerRadiusBottomEnd">15sp</item>
    </style>

    <style name="Theme.Facebook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Facebook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Facebook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
