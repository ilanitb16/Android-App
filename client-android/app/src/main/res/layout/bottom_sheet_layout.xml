<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/upper_radius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25sp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/themeLightGrey"
            android:padding="15sp"
            android:src="@drawable/user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/round_close_24"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <TextView
            android:id="@+id/bannerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="20sp"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/bannerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure to logout"
            android:textSize="14sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/textGrey"
            app:layout_constraintStart_toStartOf="@+id/bannerTitle"
            app:layout_constraintTop_toBottomOf="@+id/bannerTitle"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update_buttom"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_button_background"
            android:text="Cancel"
            android:layout_marginTop="20sp"
            android:textColor="@color/primaryColor"
            app:layout_constraintStart_toStartOf="@+id/bannerDescription"
            app:layout_constraintTop_toBottomOf="@+id/bannerDescription"
            app:layout_constraintWidth_percent="0.45" />

        <Button
            android:id="@+id/update_bdasuttom"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:text="Logout"
            android:textColor="@color/white"
            app:backgroundTint="@color/primaryColor"
            app:layout_constraintBottom_toBottomOf="@+id/update_buttom"
            app:layout_constraintEnd_toEndOf="@+id/close"
            app:layout_constraintTop_toTopOf="@+id/update_buttom"
            app:layout_constraintWidth_percent="0.45" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
